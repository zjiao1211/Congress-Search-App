<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_details__b"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background = "#FAFAFA"
    android:orientation="vertical"
    tools:context="com.example.congresssearch.ViewDetails_B">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/favorite"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/star_empty"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
    </LinearLayout>

    <TableLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Bill ID:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/B_ID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="end" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Title:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/B_Title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Bill Type:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/B_Type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="end" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Sponsor:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/B_Sponsor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="end" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Chamber:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/B_Chamber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="end" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Status:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/B_Status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="end" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Introduced On:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/B_Intro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="end" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Congress URL:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/B_CURL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="end" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Version Status:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/B_Version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="end" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
            <TextView
                android:text="Bill URL:"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <TextView
                android:textSize="15dp"
                android:layout_weight="1"
                android:id="@+id/B_Bill_URL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:gravity="end" />
        </TableRow>
    </TableLayout>


</LinearLayout>
</ScrollView>